module Ruby101
	class Book
		##construct
		def initialize(title,authors,price,tags)
			@title=title
			@authors=authors
			@price=price
			@tags=tags
		end
		#visitors
		#1st style
		def title
			@title
		end
		def title=(title)
			@title=title
		end
		#2nd style
		def get_authors
			@authors
		end
		def set_authors=(authors)
			@authors=auhors
		end
		#3rd style
		#attr_reader & attr_writer
		attr_accessor :price

	end
end



b=Ruby101::Book.new(1,2,3,4)

b.title="the ruby test title"
puts b.title

b.price=90.9
puts "book's price is "+b.price.to_s



